<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.qmuiteam.qmui.widget.QMUITopBar>


    <ScrollView

        android:layout_marginTop="?attr/qmui_topbar_height"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_marginRight="38dp"
            android:layout_marginLeft="38dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginBottom="50dp"


                android:text="修改登录密码"
                android:textSize="@dimen/text28"
                android:textColor="@color/color666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:id="@+id/viewIsFirst"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                android:background="@drawable/qmui_divider_bottom_bitmap"
                android:drawablePadding="18dp"
                android:drawableLeft="@mipmap/icon_phone"
                android:textSize="@dimen/text15"
                android:textColorHint="@color/color999"
                android:hint="请输入手机号"
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <LinearLayout
                android:background="@drawable/qmui_divider_bottom_bitmap"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:background="@null"
                    android:layout_weight="1"

                    android:layout_marginTop="10dp"
                    android:drawablePadding="18dp"
                    android:drawableLeft="@mipmap/icon_identifying_code"
                    android:textSize="@dimen/text15"
                    android:textColorHint="@color/color999"
                    android:hint="请输入验证码"
                    android:id="@+id/et_pass"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>

                <TextView
                    android:id="@+id/tv_sms"
                    android:layout_marginBottom="6dp"
                    android:textSize="@dimen/text12"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:paddingRight="12dp"
                    android:paddingLeft="12dp"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_selector"
                    android:text="获取验证码"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            </LinearLayout>

            <EditText
                android:background="@drawable/qmui_divider_bottom_bitmap"
                android:drawablePadding="18dp"
                android:drawableLeft="@mipmap/icon_phone"
                android:textSize="@dimen/text15"
                android:textColorHint="@color/color999"
                android:hint="请输入新密码"
                android:id="@+id/et_passFirst"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <EditText
                android:background="@drawable/qmui_divider_bottom_bitmap"
                android:drawablePadding="18dp"
                android:drawableLeft="@mipmap/icon_phone"
                android:textSize="@dimen/text15"
                android:textColorHint="@color/color999"
                android:hint="请确认新密码"
                android:id="@+id/et_passAgain"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <Button
                android:layout_marginTop="50dp"
                android:textColor="@color/qmui_config_color_white"
                android:background="@drawable/btn_selector"
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerInParent="true"

                android:textSize="@dimen/text16"



                android:text="确认"
                />




        </LinearLayout>

    </ScrollView>










</LinearLayout>