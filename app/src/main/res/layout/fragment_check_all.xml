<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="?attr/qmui_topbar_height"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/section"/>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="设备密码"
                android:layout_marginLeft="25dp"
                android:textColor="@color/color999"
                android:textSize="@dimen/text14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edit"
                android:textColorHint="@color/color999"
                android:paddingLeft="20dp"
                android:textSize="@dimen/text14"
                android:hint="请输入设备密码"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edit_bg"
                android:layout_width="250dp"
                android:layout_height="35dp"/>

        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btn"
        android:layout_marginRight="26dp"
        android:layout_marginLeft="26dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="确定"
        android:layout_marginBottom="38dp"
        android:layout_gravity="bottom"
        android:background="@drawable/radius_bg_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"/>
    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.qmuiteam.qmui.widget.QMUITopBarLayout>

</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>